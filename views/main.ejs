<%- include("partials/header"); -%>

<!-- Create a flex container with column direction and minimum height 100vh -->
<div style="display: flex; flex-direction: column; min-height: 100vh;">

  <!-- Main header section -->
  <header class="main" style="flex: 1; padding: 20px; margin-left: 10px; margin-right: 10px;">-
    <!-- Page title -->
    <h1 style="font-weight: bolder; margin-top: 0; color: #e33813;">Home</h1>
    <!-- Starting content of the home page -->
    <p style="margin-bottom: 20px; font-weight: bold; color: black;"><%= startingContent %></p>

    <% posts.forEach(function(post){ %>
      <!-- Blog card container with padding, margin, border, and rounded corners -->
      <div class="blog-card" style="padding: 20px; margin-bottom: 20px; border: 1px solid #ccc; border-radius: 5px;"> 
        <!-- Blog post title -->
        <h1 class="blog-title" style="font-weight: bold; color: #e33813;"><%= post.title %></h1> 
        <!-- Blog post image with custom-image class -->
        <img src="/uploads/<%= post.image %>" class="blog-image custom-image" style="height: 300px; width: 400px;">
        
        <!-- Excerpt of the blog post content -->
        <p style="color: black; font-weight: bold;">
          <%= post.content.substring(0, 300) + " ..." %>
          <!-- Read More link to view the full post -->
          <a href="/posts/<%= post.title %>">Read More</a>
        </p>
      </div>
    <% }) %>
  </header>

</div>

<!-- Footer section -->
<div class="footer-padding" style="padding-bottom: 60px;"></div>
<div class="footer" style="display: flex; flex-direction: column; align-items: center; justify-content: center; text-align: center; width: 100%; height: 60px; background-color: #e33813; position: relative; margin-top: auto;">
  <!-- Footer text -->
  <p style="font-size: 12px; color: #e6e5e1; margin: 0; padding: 0; font-weight: bold;">
    "Designed and developed by Sourabh Kumar"
  </p>
</div>
</div>
